<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body>
<% include partials/header.ejs %>
<div id="hero-image">
    <h1 id="hero-title"><%= title %></h1>
</div>
<div id="posters-wrapper" class="content-padding clearfix">
<% for(var i=0; i < movies.length; i++){ %>
    <div class="poster">
        <a href="/star_wars_episode/<%= movies[i].episode_number %>">
            <img src="/images/<%= movies[i].poster %>" class="img-responsive"></img>
        </a>
        <div class="poster-info-overlay">
            <h3><%= movies[i].title %></h3>
            <h4><a href="/star_wars_episode/<%= movies[i].episode_number %>">view more</a> <i clss="fa fa-arrow-right"></i></h4>
        </div>
    </div>
<% } %>
    </div>
<% include partials/scripts.ejs %>
<% include partials/footer.ejs %>
</body>
</html>